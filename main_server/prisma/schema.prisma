datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id            Int          @id @default(autoincrement())
  name          String
  description   String?
  transactions  Transaction[]
  userId        String
}

model Transaction {
  id            Int       @id @default(autoincrement())
  amount        Int    // Replaced Decimal with Int. 100 = $1.00
  type          Int    // Replaced enum with Int. 0 = expense, 1 = income
  date          DateTime
  description   String?
  categoryId    Int?
  category      Category?  @relation(fields: [categoryId], references: [id])
  userId        String
}

model Report {
  id            Int     @id @default(autoincrement())
  createdOn     DateTime
  periodStart   DateTime
  periodEnd     DateTime
  type          Int     // Replaced enum with Int. 0 = expense, 1 = income
  userId        String
}